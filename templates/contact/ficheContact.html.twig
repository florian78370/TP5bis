{% extends 'base.html.twig' %}

{% block title %}Liste des contact!{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Fiche contacts</h1>

<div class="row">

    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
        <div class="card mb-3">
            <h4 class="card-header"> {{leContact.nom}} {{leContact.prenom}}</h4> 
            <div class="row">
           <div class="col-2 d-flex align-items-center">
            <img class="avatar mx-auto my-3" style="border-radius: 50%; height: auto; max-width: 200px; display: block;" src="{{leContact.avatar}}" alt="">
            </svg>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Rue :{{leContact.rue}}</li>
                        <li class="list-group-item">CP :{{leContact.cp}}</li>
                        <li class="list-group-item">Mail :{{leContact.mail}}</li>
                        <li class="list-group-item">Ville :{{leContact.ville}}</li>
                        <li class="list-group-item">
                        {% if leContact.sexe == 0 %}
                        <span class="badge badge-info">homme</span>
                        {% else %}
                            <span class="badge badge-info">femme</span>
                        {% endif %}
                    </li>
                    </ul>
            </div>
            </div>
            <div class="card-body">
            <a href="{{path('fichecontacts', {'id': leContact.id})}} " class="btn btn-success btn-block text-center">enfant</a>
            </div>   
        </div>
    </div>
    
</div>
{% endblock %}
